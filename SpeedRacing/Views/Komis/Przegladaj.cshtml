@model IEnumerable<SpeedRacing.Models.Komis.KomisPojazd>
@{
    ViewBag.Title = "Przegladaj";
    Layout = "~/Views/Shared/_SpeedRacingLayout.cshtml";
}

<h2>Komis samochodowy - sprzedaż</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="view view-fourth">
                @if (item.Zdjecie1 != "")
                {
                    <img src="~/images/Komis/ZdjeciaSamochodow/@item.Zdjecie1" />
                }
                else
                {
                    <img src="~/images/Komis/ZdjeciaSamochodow/not-available.jpg" />
                }
                
                <div class="mask">
                    <h2>@item.Marka - @item.Model</h2>
                    <p>@item.KrotkiOpis</p>
                    <a href="@Url.Action("Szczegoly", "Komis", new { id = item.KomisPojazdId })" class="info">Zobacz więcej</a>
                </div>
            </div>
        }

    </div>
</div>

