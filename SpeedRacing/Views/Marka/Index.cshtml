@model System.Collections.Generic.IEnumerable<SpeedRacing.Models.Marka>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista marek</h2>

<p>
   @Html.ActionLink("Dodaj nowy", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CzyAktywny)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CzyAktywny)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.MarkaId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.MarkaId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.MarkaId })
        </td>
    </tr>
}

</table>
