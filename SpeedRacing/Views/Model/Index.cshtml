@model System.Collections.Generic.IEnumerable<SpeedRacing.Models.Model>

@{
    ViewBag.Title = "Lista samochodów";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista modeli</h2>

<p>
    @Html.ActionLink("Dodaj nowy", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Marka")
        </th>
        <th>
            @Html.DisplayName("Model")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CzyAktywny)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Marka.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CzyAktywny)
        </td>
        <td>           
            <a href="@Url.Action("Edit", new { id=item.ModelId })" class="btn btn-default" title="Edytuj"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
            <a href="@Url.Action("Details", new { id = item.ModelId })" class="btn btn-default" title="Szczegóły"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
            <a href="@Url.Action("Delete", new { id = item.ModelId })" class="btn btn-default" title="Usuń"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
        </td>
    </tr>
}

</table>
