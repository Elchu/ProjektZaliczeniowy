@model System.Collections.Generic.IEnumerable<SpeedRacing.Models.Blog.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/tabletools/2.2.3/css/dataTables.tableTools.css" />
}
<h2>Lista postów</h2>

<p>
    @Html.ActionLink("Dodaj nowy post", "Create", null, new { @class = "btn btn-primary" })
</p>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover" id="TabelaListaPostow">
            <thead>
            <th>
                Nazwa kategorii
            </th>
            <th>
                Tytuł artykułu
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPublikacji)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataModyfikacji)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CzyOpublikowany)
            </th>
            <th>
                Opcje
            </th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Kategorie.Nazwa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tytul)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Autor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataPublikacji)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DataModyfikacji)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CzyOpublikowany)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new{id=item.PostyId})" class="btn btn-default" title="Edytuj"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                            <a href="@Url.Action("Details", new{id=item.PostyId})" class="btn btn-default" title="Szczegóły"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                            <a href="@Url.Action("Delete", new{id=item.PostyId})" class="btn btn-default" title="Usuń"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{

    <script type="text/javascript" src="//cdn.datatables.net/tabletools/2.2.3/js/dataTables.tableTools.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#TabelaListaPostow').DataTable({
                "sDom": 'T<"clear">lfrtip',
                "oTableTools": {
                    "sSwfPath": "//cdn.datatables.net/tabletools/2.2.3/swf/copy_csv_xls_pdf.swf"
                },
                "language": {
                    "sProcessing": "Przetwarzanie...",
                    "sLengthMenu": "Pokaż _MENU_ pozycji",
                    "sZeroRecords": "Nie znaleziono pasujących pozycji",
                    "sInfoThousands": " ",
                    "sInfo": "Pozycje od _START_ do _END_ z _TOTAL_ łącznie",
                    "sInfoEmpty": "Pozycji 0 z 0 dostępnych",
                    "sInfoFiltered": "(filtrowanie spośród _MAX_ dostępnych pozycji)",
                    "sInfoPostFix": "",
                    "sSearch": "Szukaj:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "Pierwsza",
                        "sPrevious": "Poprzednia",
                        "sNext": "Następna",
                        "sLast": "Ostatnia"
                    }
                },
                "pagingType": "full_numbers",
            });
        });
    </script>
}
